<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.example.bloold.buildp.RestoreActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical">
            <include layout="@layout/toolbar"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp">

                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pen" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Пожалуйста, введите email,который Вы указалипри регистрации. "
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="61dp"
                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/envelope" />

                <TextView
                    android:layout_width="283dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:text="Вам будет отправлено сообщение со ссылкой для созданиянового пароля."
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/etRestEmail"
                    android:layout_width="317dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="15dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="#ffffff"
                    android:textColorLink="@android:color/holo_red_light"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="317dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnRest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.01"
                    android:background="@drawable/rounded_button"
                    android:drawableRight="@drawable/ic_menu_red_arrow"
                    android:paddingBottom="10dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:text="Изменить пароль"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
